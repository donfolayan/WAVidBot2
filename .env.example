# WABotII Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Application Configuration
APP_NAME=WABotII
APP_VERSION=0.1.0
DEV_MODE=false
LOG_LEVEL=INFO
PORT=8000
BASE_URL=https://your-domain.com

# WAHA Configuration
WAHA_BASE_URL=http://waha:3000
WAHA_SESSION_NAME=default

# WhatsApp Webhook Verification Token
VERIFY_TOKEN=your_webhook_verify_token_here

# Database Configuration
# For SQLite (local development): sqlite:///./wabotii.db
# For PostgreSQL: postgresql://user:password@localhost/wabotii
DATABASE_URL=sqlite:///./wabotii.db

# Cloudinary Configuration (for cloud storage)
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# File Retention Settings (in hours)
FILE_RETENTION_HOURS=24
CLOUDINARY_RETENTION_HOURS=24
MAX_FILE_SIZE_MB=16
DOWNLOAD_TIMEOUT_SECONDS=300

# Optional: Cookie Files (base64 encoded)
# These are optional - only needed if YouTube/Facebook requires authentication
YOUTUBE_COOKIES_CONTENT=
FACEBOOK_COOKIES_CONTENT=
